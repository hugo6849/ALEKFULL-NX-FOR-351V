         <size>0 0</size>
		 <fontSize>0.0</fontSize>
		 <zIndex>0</zIndex>
      </text>

		<datetime name="md_releasedate">
			<pos>0.855 0.676</pos>
			<color>726f70</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./../_inc/fonts/Oxygen-Regular.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<zIndex>51</zIndex> 
		</datetime>

		<text name="md_developer">
			<size>0.200 0.037</size>
			<pos>0.53 0.676</pos>
			<fontPath>./../_inc/fonts/Oxygen-Regular.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>726f70</color>
			<alignment>center</alignment>
			<zIndex>51</zIndex> 
		</text>
	  
	  		<text name="md_genre">
			<pos>0.51 0.632</pos>
			<size>0.220 0.034</size>
			<fontPath>./../_inc/fonts/Oxygen-Regular.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>726f70</color>
			<alignment>center</alignment>
			<zIndex>51</zIndex>
		</text>
	  
		<rating name="md_rating">
			<pos>0.863 0.632</pos>
			<size>0.028 0.028</size>
			<filledPath>./../_inc/images/star_filled.svg</filledPath>
			<unfilledPath>./../_inc/images/star_empty.svg</unfilledPath>
			<zIndex>51</zIndex>
		</rating>
		
		<text name="md_description">
			<color>726f70</color>
			<fontPath>./../_inc/fonts/Oxygen-Regular.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<size>0.43 0.19</size>
			<pos>0.51 0.720</pos>
			<zIndex>51</zIndex>
		</text>
	  
		<image name="md_image">
			<pos>0.737 0.335</pos>
			<maxSize>0.586 0.576</maxSize>
			<origin>0.5 0.5</origin>
			<zIndex>51</zIndex>
		</image>      
   </view>
 
</theme>